.row
  .col-xs-12
    h3 {{title}}
.row
  .col-xs-3
    form(novalidate, name='tendayForm', role='form')
      .form-group
        label(for='zip') Zip Code
        input.form-control#zip(name='zip', type='text', ng-model='zip', ng-pattern='/^[0-9]{5}$/', required, autofocus)
      .form-group
        button.btn.btn-success(ng-show='tendayForm.$valid', ng-click='getTenDay()') Predict Future!
  .col-xs-9
.row(ng-show='tenday')
  .col-xs-12
    .panel.panel-default
      .panel-body
        .webcam(ng-repeat='forecast in forecasts')
          img(ng-src='{{forecast.icon_url}}')
          h6 Neighborhood: {{webcam.neighborhod || webcam.city}}
